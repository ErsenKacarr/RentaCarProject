@model List<RentACar.MediatorPattern.Results.PricingResults.GetPricingQueryResult>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-12">
        <div class="card">

            <div class="content-wrapper">

                <div class="row">
                    <div class="col-xl-12">
                        <div class="card">
                            <div class="card-header">
                                <br />
                                <h3 class="card-title">Ödeme Türleri</h3>
                                <div class="card-body table-responsive p-0" style="height: %100px;">
                                    <table class="table table-head-fixed text-nowrap">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Ödeme Süreleri</th>
                                                <th>Sil</th>
                                                <th>Güncelle</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                count++;
                                                <tr>
                                                    <th scope="row">@count</th>
                                                    <td>@item.Name</td>
                                                    <td><a href="/AdminPricing/RemovePricing/@item.PricingID" class="btn btn-danger">Sil</a></td>
                                                    <td><a href="/AdminPricing/UpdatePricing/@item.PricingID" class="btn btn-success">Güncelle</a></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    <a href="/AdminPricing/CreatePricing/" class="btn btn-primary">Yeni Ödeme Türü Girişi</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

