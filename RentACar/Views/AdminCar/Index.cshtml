@model List<RentACar.CQRS.Results.CarResults.GetCarWithBrandQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-12">
        <div class="card">
           
            <div class="content-wrapper">

                <div class="row">
                    <div class="col-xl-12">
                        <div class="card">
                            <div class="card-header">
                                <br/>
                                <h3 class="card-title">Araç Listesi</h3>
                                <div class="card-body table-responsive p-0" style="height: %100px;">
                                    <table class="table table-head-fixed text-nowrap">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Marka</th>
                                                <th>Model</th>
                                                <th>Vites Türü</th>
                                                <th>Km</th>
                                                <th>Sil</th>
                                                <th>Güncelle</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                count++;
                                                <tr>
                                                    <th scope="row">@count</th>
                                                    <td>@item.BrandName</td>
                                                    <td>@item.Model</td>
                                                    <td>@item.Transmission</td>
                                                    <td>@item.Km</td>
                                                    <td><a href="/AdminCar/RemoveCar/@item.CarID" class="btn btn-danger">Sil</a></td>
                                                    <td><a href="/AdminCar/UpdateCar/@item.CarID" class="btn btn-success">Güncelle</a></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    <a href="/AdminCar/CreateCar" class="btn btn-primary">Yeni Araç Girişi</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

