@model RentACar.CQRS.Results.CarResults.GetCarByIdQueryResult
@{
    ViewData["Title"] = "UpdateCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="content-wrapper">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Araç Güncelleme Sayfası</h3>
                    </div>
                    <form method="post">
                        <input type="hidden" asp-for="CarID" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="exampleInputBrand">Marka</label>
                                <input type="text" class="form-control" id="exampleInputBrand" asp-for="BrandID" placeholder="Marka Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">Model</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="Model" placeholder="Model Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputCoverImage">Fotoğraf</label>
                                <input type="text" class="form-control" id="exampleInputCoverImage" asp-for="CoverImageUrl" placeholder="Fotoğraf Linkini Girin">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputKm">Km</label>
                                <input type="text" class="form-control" id="exampleInputKm" asp-for="Km" placeholder="Km Bilgisi Girin">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputTransmission">Vites Türü</label>
                                <input type="text" class="form-control" id="exampleInputTransmission" asp-for="Transmission" placeholder="Vites Türünü Girin">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputSeat">Koltuk Sayısı</label>
                                <input type="number" class="form-control" id="exampleInputSeat" asp-for="Seat" placeholder="Koltuk Sayısını Seçin Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputLuggage">Bagaj Sayısı</label>
                                <input type="number" class="form-control" id="exampleInputLuggage" asp-for="Luggage" placeholder="Bagaj Sayısını Girin">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputFuel">Yakıt Türü</label>
                                <input type="text" class="form-control" id="exampleInputFuel" asp-for="Fuel" placeholder="Yakıt Türünü Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputBıgImageUrl">Büyük Kapak Fotağrafı</label>
                                <input type="text" class="form-control" id="exampleInputBıgImageUrl" asp-for="BıgImageUrl" placeholder="Araç Detayında gözükecek Fotoğraf">
                            </div>
                            <button type="submit" class="btn btn-primary">Aracı Kaydet</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

